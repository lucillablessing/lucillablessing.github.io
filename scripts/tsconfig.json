{
	"include": ["ts/**/*"],
	"compilerOptions": {
		"allowArbitraryExtensions": true,
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"moduleResolution": "node",
		"newLine": "crlf",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"outDir": "js",
		"removeComments": true,
		"rewriteRelativeImportExtensions": true,
		"rootDir": "ts",
		"strict": true,
		"target": "es2016"
	}
}